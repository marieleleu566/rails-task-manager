<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <div>
    <% if task.completed %>
    <input type="checkbox" checked>
    <% else %>
    <input type="checkbox">
    <% end %>
   <%= link_to task.title, task_path(task) %>
   <%= link_to "(Delete)", task_path(task),
    method: :delete, data: { confirm: "Are you sure you want to delete #{task.title}?" } %>
  <% end %>
</ul>

<hr>

<%= link_to "+ Add a new task", new_task_path %>
